@model SportsStore.WebUI.Models.ProductsListViewModel

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div class="menu">
@Html.PageLinks(Model.PagingInfo, (i)=>Url.Action("List", new{page = i}))
</div>

@foreach (var product in Model.Products)
{
    <div class="item">
        <h3>@product.Name</h3>
        <h4>@product.Price.ToString("c")</h4>
    </div>
}